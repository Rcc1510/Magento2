<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
 
    <table name="quote">
        <column name="custom_shipping" nullable="true" xsi:type="int"  comment="Custom Shipping "/>
  
        <column name="shipping_types" nullable="true" xsi:type="varchar" length="255" comment="Shipping Type "/>

        <column name="residential" nullable="true" xsi:type="varchar" length="255" comment="custom residential Methods"/>
 
        <column name="liftgate" nullable="true" xsi:type="varchar" length="255" comment="custom liftgate Methods"/>
 
        <column name="delivery" nullable="true" xsi:type="varchar" length="255" comment="custom delivery Methods"/>
    </table>

    <table name="sales_order">
        <column name="custom_shipping" nullable="true" xsi:type="int"  comment="Custom Shipping "/>
  
        <column name="shipping_types" nullable="true" xsi:type="varchar" length="255" comment="Shipping Type "/>

        <column name="residential" nullable="true" xsi:type="varchar" length="255" comment="custom residential Methods"/>
 
        <column name="liftgate" nullable="true" xsi:type="varchar" length="255" comment="custom liftgate Methods"/>
 
        <column name="delivery" nullable="true" xsi:type="varchar" length="255" comment="custom delivery Methods"/>
    </table>
</schema>